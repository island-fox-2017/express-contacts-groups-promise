  <table>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Password</th>
      <th>Contacts ID</th>
      <th>Actions</th>
    </tr>

    <% data_profiles.forEach(profile => { %>
      <tr>
        <td>
          <%= profile.id %>
        </td>
        <td>
          <%= profile.username %>
        </td>
        <td>
          <%= profile.password %>
        </td>
        <td>
          <%= profile.contact_id %>
        </td>
        <td><a href="/profiles/edit/<%= profile.id %>">Edit</a> <a href="/profiles/delete/<%= profile.id %>">Delete</a> <a href="/profiles/contacts/<%= profile.id %>">Contacts</a></td>
      </tr>
      <% }) %>
  </table>
  </br>
  <a href="/profiles/add">Add profiles</a>
