<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>profiles page</title>
  </head>
  <body>
    <h1><%= header %></h1>
    <table border="1">
      <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Password</th>
        <th>Contacts Id</th>
        <th>Name</th>
        <th>Company</th>
        <th>telp_number</th>
      </tr>
      <% data_profiles.forEach( dt => { %>
        <tr>
          <td><%= dt.id %></td>
          <td><%= dt.username %></td>
          <td><%= dt.password %></td>
          <td><%= dt.contacts_id %></td>
          <td><%= dt.name %></td>
          <td><%= dt.company %></td>
          <td><%= dt.telp_number %></td>
          <td>
            <a href="/profiles/edit/<%= dt.id %>">edit</a>
          </td>
          <td>
            <a href="/profiles/delete/<%= dt.id %>">delete</a>
          </td>
        </tr>
        <% }) %>
    </table>
    <br>
    
    <form action="/profiles" method="post">
      <table>
        <tr>
        <td>Username:</td>  
        <td><input type="text" name="username" placeholder="input username"></td>
        </tr>
        <tr>
          <td>Password:</td>
          <td><input type="text" name="password" placeholder="input password"></td>
        </tr>
        <tr>
          <td>Contact id:</td>
          <td>
            <select name="contacts_id">
              <% data_contacts.forEach( dt =>{ %>
                <option value="<%=dt.id %>">(<%= dt.id %>). <%= dt.name %></option>
              <% }) %>
            </select>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><input type="submit" value="Submit"></td>
        </tr>
      </table>
    </form>
    <br>
    <a href="/">index page</a>
  </body>
</html>
