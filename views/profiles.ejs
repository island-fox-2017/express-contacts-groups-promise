<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profiles</title>
  </head>
  <body>

    <h1>Profiles</h1>
    <br>

    <table>

      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Password</th>
        <th>Name</th>
        <th>Company</th>
        <th>Telp Number</th>
        <th>E-mail</th>
      </tr>

      <% for (var i = 0; i <= table.length - 1; i++) { %>
        <tr>
          <td> <%= table[i].profilesid %> </td>
          <td> <%= table[i].username %> </td>
          <td> <%= table[i].password %> </td>
          <td> <%= table[i].name %> </td>
          <td> <%= table[i].company %> </td>
          <td> <%= table[i].telp_number %> </td>
          <td> <%= table[i].email %> </td>
          <td>
            <a href="/profiles/edit/<%= table[i].profilesid %>">Edit</a>
            <a href="/profiles/delete/<%= table[i].profilesid %>">Delete</a>
          </td>
        </tr>
      <% } %>

    </table>

    <br>

    <form class="" action="/profiles" method="post">
      <input type="text" name="username" value="" placeholder="Username">
      <br>
      <input type="text" name="password" value="" placeholder="Password">
      <br>
      <!-- <input type="text" name="profilecontact" value="" placeholder="Contact ID">
      <br> -->
      <select name="profilecontact">
        <option>Choose contacts</option>
        <% dropList.forEach(list => { %>
          <option value="<%= list.contactsid %>"><%= list.name %></option>
          <% }) %>
      </select>
      <br>
      <button type="submit">Submit</button>
    </form>


  </body>
</html>
