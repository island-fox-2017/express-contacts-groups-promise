<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>add address</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <form class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" action="/addresses" method="post">
      <fieldset>
        <legend>Input Data Address</legend>
        <b>Street : </b><br>
        <input class="w3-input w3-border" type="text" name="street" value=""> <br><br>
        <b>City : </b><br>
        <input class="w3-input w3-border" type="" name="city" value=""> <br><br>
        <b>Zip Code : </b></br>
        <input class="w3-input w3-border" type="text" name="zipcode" value=""> <br><br>
        <b>Contacts ID : <b></br>
        <!-- <input type="text" name="contacts_id" value=""> <br><br> -->
        <div id ="">   
          <select id="soflow-color" name="contacts_id">
            <% name_contact.forEach(contact => { %>            
            <option value="<%= contact.id %>"><%= contact.name %></option>
            <% }) %>
          </select>
        </div>
        <br><br>
        <input type="submit" name="" value="SUBMIT">
      </fieldset>
    </form>
  </body>
</html>