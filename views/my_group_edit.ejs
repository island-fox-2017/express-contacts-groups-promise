      <a href="../"><input type="submit" value="Home"></a> &nbsp;
      <br><br>

        <form action="/my-contact-groups" method="post">

            Assign this name :
            <select name="contact_id"  class="form-control1">
                <option value="" disabled selected>Choose Name From Contacts</option>
              <% datakontak.forEach(getDataKontak => {%>
                <option value="<%= getDataKontak.id%>"><%= getDataKontak.id%> - <%= getDataKontak.name%></option>
              <%})%>
            </select>
            into :
            <select name="group_id"  class="form-control1">
              <option value="" disabled selected>Choose Group</option>
              <% datagroup.forEach(getDataGroup => {%>
                <option value="<%= getDataGroup.id%>"><%= getDataGroup.id%> - <%= getDataGroup.group_name%></option>
              <%})%>
            </select>
            &nbsp;
            <input type="submit" value="Add New Contact Grouping" class="btn btn-success">
        </form><br>

    </center>
  </div></div>
  </body>
