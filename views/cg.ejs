<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style>
    table {
      font-family:Comic Extrabold, sans-serif;
      position: center;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 1px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <title>Contact and Group</title>
  </head>

  <body>
  <center><h3>Contact and Group</h3><center><br>
  <br><br>
  <form action="/contactandgroup" method="POST">
  <center>
  <table>
    <tr>
      <th>id</th>
      <th>Contact's ID</th>
      <th>Group's ID</th>
      <th colspan='2'></th>
    </tr>
    <% dataCG.forEach(group =>{%>
    <tr>
      <td><%= group.id %></td>
      <td><%= group.ContactID %></td>
      <td><%= group.GroupID %></td>
      <td><a href="/group/edit/<%= group.id %>"><button type="button" name="Edit">EDIT</button></a></td>
      <td><a href="/group/delete/<%= group.id %>"><button type="button" name="Delete">DELETE</button></a></td>
      </tr>
      <%})%>
    </table>
    <br><br>
      <select name = "ContactID">
      <option value "">
        -- Select ID Contact --
      </option>
      <% dataCont.forEach( cont => { %>
      <option value ="<%= cont.id %>">
      <%= cont.Name %>
      </option>
      <% }) %>
    </select>

    <select name = "GroupID">
    <option value "">
      -- Select ID Group --
    </option>
    <% dataGroup.forEach( cont => { %>
    <option value ="<%= cont.id %>">
    <%= cont.GroupName %>
    </option>
    <% }) %>
  </select>

  <input type="submit" value="Submit">

  </center>
    </form>
  </body>
</html>
