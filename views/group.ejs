<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>group</title>
  </head>
  <body>
    <table border="1px" width="100%"> 
      <tr>
        <th>id</th>
        <th>group name</th>
        <th>action</th>
      </tr>
      <% dataGrup.forEach(d => { %>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.name_of_group %></td>
        <td><a href="/groups/edit/<%= d.id %>">Edit</a> | <a href="/groups/delete/<%= d.id %>">Delete</a> || <a href="/groups/details/<%= d.id %>">Details</a></td>
      </tr>
      <% }) %>
    </table>
    <br>
    <form action="/groups" method="post">
      <input type="text" name="formGroupName" placeholder="name of group"><br>
      <input type="submit" name="submit" value="SUBMIT">
    </form>
    <br>
    <a href="/">back</a>
  </body>
</html>
