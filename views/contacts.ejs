<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <nav>
      <a class='button' href="groups">Groups</a>
      <a class='button' href="contacts">Contacts</a>
      <a class='button' href="profiles">Profiles</a>
      <a class='button' href="address">Address</a>
      <a class='button' href="groups/details">G Details</a>
      <a class='button' href="contacts/details">C Details</a>
    </nav>
    <table>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Company</th>
        <th>Telp Number</th>
        <th>E-mail</th>
        <th>Action</th>
      </td>
      <% for(var i = 0; i < data.length; i++) { %>
      <tr>
        <td><%= data[i].id %></td>
        <td><%= data[i].name %></td>
        <td><%= data[i].company%></td>
        <td><%= data[i].telp_number%></td>
        <td><%= data[i].email%></td>
        <td><a class = 'button_2' href='/contacts/edit/<%= data[i].id %>'>Edit </a>||
            <a class = 'button_2' href='/contacts/delete/<%= data[i].id %>'>Delete </a>||
            <a class = 'button_2' href='/contacts/address/<%= data[i].id %>'>Address </a>
          </td>
      </tr>
      <%  }  %>

    </table>

    <!-- Contacts: id type integer, name type string, company type string, telp_number type string, email type string -->

    <form action="/contacts" method="post">
      <input type="text" name='name' placeholder="name">
      <input type="text" name='company' placeholder="company">
      <input type="text" name='telp_number' placeholder="telp_number">
      <input type="text" name='email' placeholder="email">
      <button class = 'button_3' type="submit">Submit</button>
    </form>

  </body>
</html>
