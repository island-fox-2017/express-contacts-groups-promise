<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>add contact</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <form class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" action="/contacts_groups" method="post">
      <fieldset>
        <legend>Assignment Contact to Group</legend>
        <b>Contact Name : <b></br>
          <select id="soflow-color"  name="contact_id">
            <% name_contact.forEach(contact => { %>            
            <option value="<%= contact.id %>"><%= contact.name %></option>
            <% }) %>
          </select>
        <br>
        <b>Group Name : <b><br>
          <select id="soflow-color"  name="group_id">
            <% name_group.forEach(group => { %>            
            <option value="<%= group.id %>"><%= group.name_of_group %></option>
            <% }) %>
          </select>
        <br>
        <input type="submit" name="" value="SUBMIT">
      </fieldset>
    </form>
  </body>
</html>