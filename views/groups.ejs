<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groups Page</title>
    <link href="/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  </head>
  <body>
    <h1><i class="fa fa-group"> My Groups</i></h1>
    <button id="btn-start"><i class="fa fa-plus"> Add</i></button>
    <button id="btn-start" onclick="window.location='/'"><i class="fa fa-arrow-left"> Back</i></button>

    <div id="div1" class="modal">
      <form id="main-form" class="modal-content animate" name="mainForm" action="/groups" method="post">
        <div class="container">
          <label><b>Group Name</b></label>
          <input type="text" name="name_group" placeholder="Type your group name" />
          <div class="clearfix">
            <button id="cancelbtn" type="button" class="cancelbtn">Cancel</button>
            <button type="submit" name="submit" value="submit" class="submitbtn">Submit</button>
          </div>
        </div>
      </form>
    </div>

    <div>
      <table border="1">
        <tr>
          <th>ID</th>
          <th>GROUP NAME</th>
          <th>ACTION</th>
        </tr>
        <% data.forEach(d => {%>
          <tr>
            <td><%= d.id %></td>
            <td><%= d.name_group %></td>
            <td><a href='groups/edit/<%= d.id %>'><i class="fa fa-pencil"> Edit</i></a> || <a href='groups/delete/<%= d.id %>'><i class="fa fa-eraser"> Delete</i></a></td>
          </tr>
        <% }) %>
      </table>
    </div>
    <script src="/script.js"></script>
  </body>
</html>
