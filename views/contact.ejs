<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
      <h2>Contacts Input</h2>
      <table border="2">
        <tr>
          <th>id</th>
          <th>Name</th>
          <th>Company</th>
          <th>Phone Number</th>
          <th>email</th>
          <th>Groups</th>
        </tr>
          <% contactsInput.forEach(contact => {%>
            <tr>
              <td>
                <%= contact.id %>
              </td>
              <td>
                <%=contact.name%>
              </td>
              <td>
                <%=contact.company%>
              </td>
              <td>
                <%=contact.telp_number%>
              </td>
              <td>
                <%=contact.email%>
              </td>
              <td><%=contact.name_of_group%></td>
              <td>
                <a href="/contacts/edit/<%=contact.id %>">Edit</a>
                <a href="/contacts/delete/<%=contact.id %>">Delete</a>
                <a href="/contacts/show-address/<%=contact.id %>">Show Address</a>
              </td>
            </tr>
          <% }) %>
      </table>
      <br><br>
      <form action = "/contacts" method="POST" >
          <input type="text" name="name" placeholder="Name">
          <input type="text" name="company" placeholder="Company">
          <input type="text" name="phone" placeholder="Phone Number">
          <input type="text" name="email" placeholder="Your mail">
          <button type="submit" name="button" >Submit</button>
      </form>
      <h2><a href="http://localhost:3000">Home</a></h2>
  </body>
</html>
