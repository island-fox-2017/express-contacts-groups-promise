<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>edit contact</title>
  </head>
  <body>
    <h1><%= header %></h1>
    <form action="/contacts/edit/<%=data_contacts[0].id %>" method="post">
      <table>
        <tr>
          <td>Name:</td>
          <td><input type="text" name="name" value="<%=data_contacts[0].name %>"></td>
        </tr>
        <tr>
          <td>Company:</td>
          <td><input type="text" name="company" value="<%=data_contacts[0].company %>"></td>
        </tr>
        <tr>
          <td>Telp Number:</td>
          <td><input type="text" name="telp_number" value="<%=data_contacts[0].telp_number %>"></td>
        </tr>
        <tr>
          <td>Email:</td>
          <td><input type="text" name="email" value="<%=data_contacts[0].email %>"></td>
        </tr>
        <tr>
          <td></td>
          <td><input type="submit" value="Submit"></td>
        </tr>
      </table>
      
    </form>
  </body>
</html>
