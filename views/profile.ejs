<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profile Page</title>
    <link href="/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  </head>
  <body>
    <h1><i class="fa fa-address-book"> My Profiles </i></h1>
    <button id="btn-start"><i class="fa fa-plus"> Add</i></button>
    <button id="btn-start" onclick="window.location='/'"><i class="fa fa-arrow-left"> Back</i></button>

    <div id="div1" class="modal">
      <form id="main-form" class="modal-content animate" name="mainForm" action="/profile" method="post">
        <div class="container">
          <label><b>Username</b></label>
          <input type="text" name="username" placeholder="Type your username" />
          <label><b>Password</b></label>
          <input type="password" name="pwd" placeholder="Type your password" />
          <label><b>ID Contact : </b></label>
          <!--<input type="text" name="contact_id" placeholder="Type your contact id" /> -->
          <select name="selectIdContact">
            <option value="">--Select ID Contact--</option>
            <% data2.forEach(function(d2){ %>
            <option value="<%= d2.id %>"><%= d2.id %> <%= d2.long_name %></option>
            <% }) %>
          </select>
          <div class="clearfix">
            <button id="cancelbtn" type="button" class="cancelbtn">Cancel</button>
            <button type="submit" name="submit" value="submit" class="submitbtn">Submit</button>
          </div>
        </div>
      </form>
    </div>

    <div>
      <table border="1">
        <tr>
          <th>ID</th>
          <th>USERNAME</th>
          <th>PASSWORD</th>
          <th>ID CONTACT</th>
          <th>ACTION</th>
        </tr>
        <% data.forEach(d => {%>
          <tr>
            <td><%= d.id %></td>
            <td><%= d.username %></td>
            <td><%= d.pwd %></td>
            <td><%= d.contact_id %></td>
            <td><a href='profile/edit/<%= d.id %>'><i class="fa fa-pencil"> Edit</i></a> || <a href='profile/delete/<%= d.id %>'><i class="fa fa-eraser"> Delete</i></a></td>
          </tr>
        <% }) %>
      </table>
    </div>
    <script src="/script.js"></script>
  </body>
</html>
