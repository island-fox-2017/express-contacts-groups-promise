<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>profiles</title>
  </head>
  <body>
    <table border="1px" width="100%">
      <tr>
        <th>id profile</th>
        <th>username</th>
        <th>password</th>
        <th>id contact</th>
        <th>nama kontak</th>
        <th>actions</th>
      </tr>
      <% dataProfile.forEach(d => { %>
      <tr>
        <td><%= d.idProfile %></td>
        <td><%= d.username %></td>
        <td><%= d.password %></td>
        <td><%= d.Contacts_id %></td>
        <td><%= d.name %></td>
        <td><a href="/profiles/edit/<%= d.idProfile %>">Edit</a> | <a href="/profiles/delete/<%= d.idProfile %>">Delete</a></td>
      </tr>
      <% }) %>
    </table>
    <br>
    <form action="/profiles" method="post">
      <input type="text" name="formUsername" placeholder="username"><br>
      <input type="text" name="formPassword" placeholder="password"><br>
      <!-- <input type="text" name="formIdContact" placeholder="id contact"><br> -->
      <label for="formIdContact">Contact name:</label>
      <select name="formIdContact">
        <% dataKontak.forEach(d => { %>
        <option value="<%= d.id %>"><%= d.name %></option>
        <% }) %>
      </select><br>
      <input type="submit" name="submit" value="SUBMIT">
    </form>
    <br><a href="/">back</a>
  </body>
</html>
