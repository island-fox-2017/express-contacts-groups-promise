<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Contact Groups</title>
  </head>
  <body>
    <h1>Contact Group</h1>
    <br>
      <table border="2">
        <tr>
          <th>id</th>
          <th>Name Contact</th>
          <th>Group Name</th>
        </tr>
        <% groupInput.forEach(group => { %>
          <tr>
            <td><%= group.id%></td>
            <td><%= group.name%></td>
            <td><%= group.name_of_group%></td>
            <td>
              <a href="/contactGroup/edit/<%=group.id %>">Edit</a>
              <a href="/contactGroup/delete/<%=group.id%>">Delete</a>
            </td>
            <td><%= group.group_id%></td>
          </tr>
        <% }) %>
    </table>
    <br><br>
    <form action="/contactGroup" method="post">
      <select name="contactList">
        <%contactName.forEach(kontak => {%>
          <option value="<%=kontak.id%>"><%=kontak.name%></option>
        <%})%>
      </select>

      <select name="groupList">
        <%groupName.forEach(group => {%>
          <option value="<%=group.id%>"><%=group.name_of_group%></option>
        <%})%>
      </select>

      <button type="submit" name="button">Submit</button>
    </form>

  </body>
</html>
