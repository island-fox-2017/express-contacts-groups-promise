<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Addresses Page</title>
    <link href="/style.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
  </head>
  <body>
    <h1><i class="fa fa-address-book"> Address Contact </i></h1>
    <button id="btn-start"><i class="fa fa-plus"> Add</i></button>
    <button id="btn-start" onclick="window.location='/'"><i class="fa fa-arrow-left"> Back</i></button>

    <div id="div1" class="modal">
      <form id="main-form" class="modal-content animate" name="mainForm" action="/address" method="post">
        <div class="container">
          <label><b>Street</b></label>
          <input type="text" name="street" placeholder="Type your street" />
          <label><b>City</b></label>
          <input type="text" name="city" placeholder="Type your city" />
          <label><b>Zip Code</b></label>
          <input type="text" name="zip_code" placeholder="Type your zip code" />
          <label><b>ID Contact</b></label>
          <!-- <input type="text" name="contact_id" placeholder="Type your contact id" /> -->
          <select name="selectIdContact">
            <option value="">--Select ID Contact--</option>
            <% data2.forEach(function(d2){ %>
            <option value="<%= d2.id %>"><%= d2.id %> <%= d2.long_name %></option>
            <% }) %>
          </select>
          <div class="clearfix">
            <button id="cancelbtn" type="button" class="cancelbtn">Cancel</button>
            <button type="submit" name="submit" value="submit" class="submitbtn">Submit</button>
          </div>
        </div>
      </form>
    </div>

    <div>
      <table border="1">
        <tr>
          <th>ID</th>
          <th>STREET</th>
          <th>CITY</th>
          <th>ZIP CODE</th>
          <th>ID CONTACT</th>
          <th>ACTION</th>
        </tr>
        <% data.forEach(d => {%>
          <tr>
            <td><%= d.id %></td>
            <td><%= d.street %></td>
            <td><%= d.city %></td>
            <td><%= d.zip_code %></td>
            <td><%= d.contact_id %></td>
            <td><a href='address/edit/<%= d.id %>'><i class="fa fa-pencil"> Edit</i></a> || <a href='address/delete/<%= d.id %>'><i class="fa fa-eraser"> Delete</i></a></td>
          </tr>
        <% }) %>
      </table>
    </div>
    <script src="/script.js"></script>
  </body>
</html>
